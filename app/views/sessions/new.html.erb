<div class="container padded-container">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">
      <h2>Log In</h2>
      <%= form_tag sessions_path do |f| %>
        <% if @error %>
          <div class="error_messages">
            <div class="alert alert-danger">
              <%= @error %>
            </div>
          </div>
        <% end %>

        <div class="form-group">
          <%= label_tag :username, nil, class: 'control-label' %>
          <%= text_field_tag :username, params[:username], class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= label_tag :password, nil, class: 'control-label' %>
          <%= password_field_tag :password, '', class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= submit_tag 'Log In', class: 'btn btn-success btn-block' %>
        </div>
        <div class="form-group">
          <%= link_to 'Need an account? Sign up.', signup_path %>
        </div>
      <% end %>
    </div>
  </div>
</div>
