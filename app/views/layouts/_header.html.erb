<header id="header">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#collapsible-navbar" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <i class="fa fa-bars"></i>
      </button>
      <%= link_to 'Palette Pal', root_path, class: 'brand' %>
    </div>

    <div class="collapse navbar-collapse" id="collapsible-navbar">
      <ul class="nav navbar-nav navbar-right">
        <% if current_user %>
        <li>
          <%= link_to 'Liked', palette_likes_path, class: 'auth-link' %>
        </li>
        <% else %>
        <li>
          <%= link_to 'Login', login_path, class: 'auth-link' %>
        </li>
        <li>
          <%= link_to 'Signup', signup_path, class: 'auth-link' %>
        </li>
        <% end %>
      </ul>
    </div>
  </div>
</header>
